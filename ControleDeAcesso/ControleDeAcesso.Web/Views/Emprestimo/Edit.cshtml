@model S2Games.Web.Models.EmprestimoViewModel

@{
    ViewBag.Title = "Alterar Emprestimo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="col-md-offset-1">
                    <h4>Alterar Emprestimo</h4>
                </div>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdEmprestimo)

                <div class="form-group">
                    @Html.LabelFor(model => model.IdJogo, "IdJogo", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                        @Html.DropDownList("IdJogo", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdJogo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.IdUsuario, "IdUsuario", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                        @Html.DropDownList("IdUsuario", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.IdUsuario, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.DataEmprestimo, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.DataEmprestimo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.DataEmprestimo, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-1">
                        <input type="submit" value="Alterar" class="btn btn-success" />
                    </div>
                    <div class="col-md-1">
                        <a href='@Url.Action("Index", "Emprestimo")' class="btn btn-primary">
                            Voltar
                        </a>
                    </div>
                    <div class="col-md-2">
                        <a href='@Url.Action("Edit", "Emprestimo", new { id = Model.IdEmprestimo})' class="btn btn-warning">
                            Limpar Alterações
                        </a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>