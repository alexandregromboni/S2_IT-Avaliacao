@model PagedList.IPagedList<S2Games.Web.Models.EmprestimoViewModel>
@using PagedList.Mvc;

@{
    ViewBag.Title = "Emprestimos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10 col-md-offset-1">

    <div class="panel panel-default panel-table">
        <div class="panel-body">
            <div class="col-md-offset-1">
                <a href='@Url.Action("Create", "Emprestimo")' class="btn btn-primary" style="margin-top:10px;">
                    Novo Emprestimo
                </a>
            </div>

            <hr />
            <table class="table table-striped table-bordered table-list">
                <thead>
                    <tr>
                        <th width="35%">
                            JOGO
                        </th>
                        <th width="30%">
                            AMIGO
                        </th>
                        <th width="20%">
                            DATA EMPRESTIMO
                        </th>
                        <th width="15%">AÇÕES</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Jogo.Descricao)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Usuario.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DataEmprestimo)
                            </td>
                            <td class="actions form-inline">
                                <a href='@Url.Action("Details", "Emprestimo", new { id = item.IdEmprestimo })' class="btn btn-primary" title="Detalhes">
                                    <span class="glyphicon glyphicon glyphicon-search"></span>
                                </a>
                                <a href='@Url.Action("Edit", "Emprestimo", new { id = item.IdEmprestimo })' class="btn btn-primary" title="Alterar">
                                    <span class="glyphicon glyphicon-pencil"></span>
                                </a>
                                <a href='@Url.Action("Delete", "Emprestimo", new { id = item.IdEmprestimo })' class="btn btn-primary" title="Excluir">
                                    <span class="glyphicon glyphicon glyphicon-trash"></span>
                                </a>
                            </td>
                        </tr>
                    </tbody>
                    <tfoot></tfoot>
                }

            </table>
        </div>
        <div class="panel-footer">
            <div class="row">
                <div class="col col-xs-7 col-xs-offset-5">
                    <ul class="pagination hidden-xs">
                        @Html.PagedListPager(Model, page => Url.Action("Index", "Acesso", new { pagina = page }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
                    </ul>
                </div>
            </div>
        </div>

    </div>
</div>
