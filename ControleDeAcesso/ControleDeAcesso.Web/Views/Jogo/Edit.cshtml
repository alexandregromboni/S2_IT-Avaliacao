@model S2Games.Web.Models.JogoViewModel

@{
    ViewBag.Title = "Alterar Jogo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-md-10 col-md-offset-1">
    <div class="panel panel-default">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="col-md-offset-1">
                    <h4>Alterar Jogo</h4>
                </div>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdJogo)

                <div class="form-group">
                    @Html.LabelFor(model => model.Descricao, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Descricao, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Descricao, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Plataforma, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Plataforma, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Plataforma, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-1">
                        <input type="submit" value="Alterar" class="btn btn-success" />
                    </div>
                    <div class="col-md-1">
                        <a href='@Url.Action("Index", "Jogo")' class="btn btn-primary">
                            Voltar
                        </a>
                    </div>
                    <div class="col-md-2">
                        <a href='@Url.Action("Edit", "Jogo", new { id = Model.IdJogo})' class="btn btn-warning">
                            Limpar Alterações
                        </a>
                    </div>
                </div>
            </div>
        }

    </div>
</div>